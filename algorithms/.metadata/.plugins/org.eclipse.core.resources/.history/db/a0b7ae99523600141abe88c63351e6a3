package mainpkg;

/**
 * @author Vignesh Prakasam
 *
 */
public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub		
		int n1=1;
		int n2 = 10;
		int val = 0;
		int count = 0;
		int checkVarNew = 0;
		int checkVarOld = 0;		
		for(n1=1;n1<=n2;n1++){
			val = n1;
			while(val==1){
				if(n1%2 == 1){
					val = (val*3)+1;
				}
				else{
					val = val/2;
				}
				count++;				
			}
			checkVarNew = count;
			if(checkVarNew>=checkVarOld){				
				checkVarOld = checkVarNew;
			}
		}
		System.out.println("1 10 "+ checkVarOld);
	}
}
